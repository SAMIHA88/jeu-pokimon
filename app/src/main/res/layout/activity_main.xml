<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/blatoise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:src="@drawable/blastoise"/>

    <ImageButton
        android:id="@+id/bulbasaur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:src="@drawable/bulbasaur"
        app:layout_constraintTop_toBottomOf="@+id/blatoise"
        tools:layout_editor_absoluteX="60dp" />

    <ImageButton
        android:id="@+id/butterfree"
        android:layout_width="253dp"
        android:layout_height="250dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/butterfree"
        app:layout_constraintStart_toEndOf="@+id/bulbasaur"
        app:layout_constraintTop_toBottomOf="@+id/venusaur" />

    <ImageButton
        android:id="@+id/caterpie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:src="@drawable/caterpie"
        app:layout_constraintTop_toBottomOf="@+id/bulbasaur"
        tools:layout_editor_absoluteX="37dp" />

    <ImageButton
        android:id="@+id/charizard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:src="@drawable/charizard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.381"
        app:layout_constraintStart_toEndOf="@+id/caterpie"
        app:layout_constraintTop_toBottomOf="@+id/butterfree" />

    <ImageButton
        android:id="@+id/venusaur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toEndOf="@+id/blatoise"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:src="@drawable/venusaur"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Pokimon Apllication"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#009688"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>